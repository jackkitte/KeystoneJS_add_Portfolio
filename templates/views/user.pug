extends ../layouts/default

block content
  .container
    .row
      .col-md-12.col-lg-12
      article
        header
          h1 #{data.name.first}
        .row
          .col-md-6.col-lg-6
            if data.image
              img(src=data._.image.fit(750,450)).img-responsive
          .col-md-6.col-lg-6
            ul.list-group
              li.list-group-item.active
                strong 趣味
              li.list-group-item
                strong なし
              li.list-group-item.active
                strong スキルセット
              li.list-group-item
                != data.skillset